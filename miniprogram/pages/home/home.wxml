<scroll-view scroll-y="true" bindscroll="scroll">
  <view class="swiper">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="1000">
      <block wx:for="{{imgUrls}}" wx:key="item.id">
        <swiper-item>
          <image src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="mobi_title">
    <text class="mobi_icon"></text>
    <text>店铺信息</text>
  </view>

<view class="container">
    <view wx:for="{{proLst}}" class="product" >
        <navigator url="{{item.link}}">
            <image  src="{{item.url}}" class="pro-image" mode="widthFix" />
            <view class="prod-content">
                <text class="prod-title">{{item.text}}</text>
                <text class="prod-money">{{item.title}}</text>
            </view>
        </navigator>
    </view>
</view>  

</scroll-view>
