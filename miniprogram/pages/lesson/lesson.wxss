    margin-left: 5px;
}
.active_time {
    float: right;
    font-size: 12px;
}
.active_block {
    margin-bottom: 10px;
}
.active_group_price {
    font-size: 12px;
    color: #FF0000;
}

.tab-nav{
	height: 80rpx;
	background: #fff;
	border-bottom: 1rpx solid #ddd;
	display: flex;
	line-height: 79rpx;
	position: relative;
}

.tab-nav text.active{
	color: #f7982a;
}

.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #69c3aa;
	transition: all 0.3s;
  margin-bottom: 3px;
}
.tab-text{
  display: flex;
  justify-content: center;
  font-size: 15px;
	color: #777;
}

