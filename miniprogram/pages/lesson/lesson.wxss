/* 条件选择器区域 */
.choice-area{
  position: relative;
  display: flex;
  flex-direction: row;
  background: white
}

.choice-item{
  position: relative;
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  padding-top: 5px;
  height: 35px;
}

.choice-line{
  height: 14px;
  background: #69c3aa;
  width: 1px;
  position: absolute;
  right: 1px;
}

.fenge-line{
  width: 100%;
  height: 1px;
  background: #69c3aa;
  margin-top: 5px;
}

.picker-area{
  height: 30px;
  width: 100%;
  position: relative;
  display: flex;
  align-content: center;
  background: white
}
.picker{
    display: flex;
    position: relative;
    justify-content: center;
    align-content: center;
} 
.picker-text{
  font-size: 14px;
  color: #69c3aa;
}
.down-img{
  width: 14px;
  height: 14px;
  margin-left: 5px;
  margin-top: 3px
}
.picker-text-container{
  position: relative;
  display: flex;
  flex-grow: 1
}

/* weekday区域 */
.weekday-area{
  margin-top: 5px;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center
}

.weekday-item{
  position: relative;
  display: flex;
  flex-grow: 1;
  font-size: 12px;
  color: #69c3aa;
  justify-content: center;
  align-items: center;
  height: 25px;
  flex-direction: column;
}

.weekday-item-checked{
  position: relative;
  display: flex;
  flex-grow: 1;
  font-size: 12px;
  color: white;
  justify-content: center;
  align-items: center;
  height: 25px;
  background: #69c3aa;
  transform: translateX(1/7);
  border-radius: 10px;
  flex-direction: column;
}


.fenge-line2{
  height: 16px;
  background: #69c3aa;
  color: #69c3aa;
  margin-left: 5px;
  margin-right: 5px;
  width: 3px;
}
.fenge-line2-area{
  position: relative;
  display: flex;
  flex-direction: row;
  margin: 5px;

}
.picker-text-date{
  font-size: 14px;
  color: #69c3aa;
  position: absolute;
  display: flex;
  right: 10px;
}

/* 列表区域 */
.lesson-area{
  position: relative;
  display: flex;
  flex-direction: row;
  height: 90px;
  border-radius: 5px;
  border: 1px solid #cef0e6;
  align-items: center;
}
.lessonpic-container{
  height: 80px;
  width: 80px;
  margin-left: 5px;
}
.lessonpic{
  height: 100%;
  width: 100%;
  border-radius: 100%
}
.lessoninfo-detail{
  position: relative;
  display: flex;
  flex-direction: row;
  margin-left: 20px;
  flex-grow: 1;
  height: 100%
}
.lessoninfo-container{
  position: relative;
  display: flex;
  width: 80%;
  flex-direction: column;
}
.lesson-button{
  position: absolute;
  display: flex;
  right: 10px;
  background: #69c3aa;
  color: white;
  width: 60px;
  height: 40px;
  border: 1px solid #69c3aa;
  border-radius: 10px;
  font-size: 18px;
  justify-content: center;
  align-items: center;
}
.lesson-name{
  font-size: 20px;
  color: #69c3aa;
}
.lesson-tag-text{
  font-size: 14px;
  color: gray;
  margin-right: 10px
}
.lesson-tag{
  position: relative;
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}
.lesson-digit{
  position: relative;
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}
.lesson-digit-time{
  font-size: 16px;
  color: #69c3aa
}
.lesson-digit-price{
  font-size: 16px;
  margin-left: 10px;
  color: red
}